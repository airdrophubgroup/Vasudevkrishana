    <header>
        <h1>ðŸš€ AirdropHubGroup</h1>
        <p>Your go-to hub for free crypto airdrops & community farming</p>
    </header>
    <div class="container">
        <h2>Featured Airdrops (October 2025)</h2>
        <div id="airdrops-list"></div>
    </div>

    <script>
        const airdrops = [
            {
                title: "Solana Layer 2 Blast",
                description: "Earn points by bridging assets and joining Telegram.",
                tasks: ["Join Telegram Group", "Follow on X (Twitter)", "Complete On-Chain Swap"],
                groupLink: "https://t.me/airdrops_io"  // Example link
            },
            {
                title: "Ethereum Retro Drop - Arbitrum",
                description: "Retroactive rewards for early users. Verify wallet activity.",
                tasks: ["Connect Wallet", "Join Discord", "Share Referral"],
                groupLink: "https://discord.com/invite/3pYcjxR"  // Example link
            },
            {
                title: "Base Chain Airdrop",
                description: "Farm tokens via social tasks and staking.",
                tasks: ["Sign Up on Web App", "Engage on Posts", "Invite Friends"],
                groupLink: "https://t.me/airdrops_io"  // Example link
            }
        ];

        function renderAirdrops() {
            const list = document.getElementById('airdrops-list');
            airdrops.forEach((airdrop, index) => {
                const card = document.createElement('div');
                card.className = 'airdrop-card';
                card.innerHTML = `
                    <div class="airdrop-title">${airdrop.title}</div>
                    <p>${airdrop.description}</p>
                    <ul class="task-list">
                        ${airdrop.tasks.map(task => `<li class="task-item"><input type="checkbox" onchange="updateStatus(${index})"> ${task}</li>`).join('')}
                    </ul>
                    <div id="status-${index}" class="status pending">Status: Pending</div>
                    <button class="join-btn" onclick="joinGroup('${airdrop.groupLink}')">Join Group & Start Farming</button>
                `;
                list.appendChild(card);
            });
        }

        function updateStatus(index) {
            const checkboxes = document.querySelectorAll(`#airdrops-list .airdrop-card:nth-child(${index + 1}) input[type="checkbox"]`);
            const statusEl = document.getElementById(`status-${index}`);
            const completed = Array.from(checkboxes).filter(cb => cb.checked).length;
            const total = checkboxes.length;
            if (completed === total) {
                statusEl.textContent = 'Status: Claim Ready! ðŸŽ‰';
                statusEl.className = 'status ready';
            } else {
                statusEl.textContent = `Status: ${completed}/${total} Tasks Complete`;
                statusEl.className = 'status pending';
            }
        }

        function joinGroup(link) {
            window.open(link, '_blank');
        }

        renderAirdrops();
    </script>
</body>
